{
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["**/*.spec.ts", "dist", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom","es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": false
  }
}
